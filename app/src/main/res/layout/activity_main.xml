<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Upload"
        />

    <EditText
        android:id="@+id/txt_name_file"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:hint="Enter file" />

    <TextView
        android:id="@+id/tv_show_upload"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/txt_name_file"
        android:layout_alignTop="@+id/btn_upload"
        android:gravity="center"
        android:text="Show uploads"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="341dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:layout_centerInParent="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_choose_image"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_above="@+id/image_view"
        android:layout_alignEnd="@+id/txt_name_file"
        android:clickable="true"
        app:srcCompat="@drawable/ic_action_click" />

</RelativeLayout>